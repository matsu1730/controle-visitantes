@model Visitante

<div class="container d-flex flex-column align-items-center justify-content-center">

    <h1>Pesquisar visitante</h1>

    <form asp-action="pesquisar" asp-controller="visitante">

        <partial name="_FormPesquisar" />

        <input type="submit" value="Pesquisar" class="btn text-light btn-success" />
        <a asp-action="index" class="btn btn-outline-dark">Lista de Visitantes</a>
    </form>

    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>CPF</th>
            <th>Sexo</th>
            <th>Pessoa com deficiência</th>
        </tr>

        @if (Model != null)
        {
            <tr>
                <td>@Model.Nome</td>
                <td>@Model.Idade</td>
                <td>@Model.CPF</td>
                <td>@Model.Sexo</td>
                <td>@Model.PCD</td>
            </tr>
        }
    </table>
</div>